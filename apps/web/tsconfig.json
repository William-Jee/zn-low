{
  "extends": "@splash/configs/typescript/nextjs.json",
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.cjs"
  ],
  "exclude": ["node_modules", "tailwind.config.cjs"],
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "resolveJsonModule": true
  }
}
